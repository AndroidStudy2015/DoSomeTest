<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.view.custom.dosometest.view.MyLinearLayoutWithMargin
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="10px"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="30px"
            android:background="#00fff0"
            android:text="Hello World!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:background="#fcff0c"
            android:layout_marginBottom="10px"
            android:text="Java is " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:background="#fc090c"
            android:text="kotlin is " />
    </com.view.custom.dosometest.view.MyLinearLayoutWithMargin>


    <com.view.custom.dosometest.view.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/colorPrimary"
        android:paddingTop="100px"
        android:orientation="vertical">
        <TextView
            android:layout_width="300px"
            android:layout_height="300px"
            android:gravity="center"
            android:background="#00fff0"
            android:text="Hello World!" />

    </LinearLayout>

</LinearLayout>